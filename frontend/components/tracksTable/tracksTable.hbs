<div class="table-container">
    <p>Results for <span class="query">{{query}}</span> (Top <b>{{rows.length}}</b> search results are shown)</p>
    <table id="tracks-table" class="table table-striped table-condensed table-hover" >
        <tr>
            <th>ID</th>
            <th>Track</th>
            <th>Artist / Album</th>
            <th></th>
            <th></th>
        </tr>
        {{#rows}}
            <tr>
                <td class="track-id">
                    <div class="track-isrc">
                        <span class="title">isrc:</span>
                        <span class="value">{{isrc}}</span>
                    </div>
                    <div class="track-lmid">
                        <span class="title">lmid:</span>
                        <span class="value">{{lmid}}</span>
                    </div>
                </td>
                <td class="track-name">{{trackName}}</td>
                <td class="track-info">{{artistName}} / {{albumName}}</td>
                <td>
                    <audio controls>
                        <source src="{{sample}}" type="audio/mpeg">
                        Audio not supported on your device
                    </audio>
                </td>
                <td><div class="btn btn-primary btn-xs similar-button">FIND SIMILAR</div></td>
            </tr>
        {{/rows}}
    </table>
</div>
