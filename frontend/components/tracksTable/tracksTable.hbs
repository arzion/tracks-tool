<div class="table-container">
    <p>Results for <span class="query">{{query}}</span> (Top <b>{{rows.length}}</b> search results are shown)</p>
    <table id="tracks-table" class="table table-striped table-condensed table-hover" >
        <tr>
            <th></th>
            <th></th>
            <th>Artist / Album</th>
            <th>Track</th>
            <th colspan="2">Sample</th>
        </tr>
        {{#rows}}
            <tr>
                <td class="cover">
                    <div class="cover-image" style="background-image: url({{imageUrl}})"></div>
                </td>
                <td class="track-id">
                    <div class="track-lmid">
                        <span class="title">id:</span>
                        <span class="value">{{id}}</span>
                    </div>
                    <div class="track-isrc">
                        <span class="title">isrc:</span>
                        <span class="value">{{isrc}}</span>
                    </div>
                </td>
                <td class="track-info">{{artist}} / {{album}}</td>
                <td class="track-name">{{track}}</td>
                <td>
                    <audio controls>
                        <source src="{{sampleUrl}}" type="audio/mpeg">
                        Audio not supported on your device
                    </audio>
                </td>
                <td><div class="btn btn-default btn-xs similar-button" data-isrc="{{isrc}}" data-id="{{id}}">SIMILAR</div></td>
            </tr>
        {{/rows}}
    </table>
</div>
